@model BasicRepository.Models.Course

@{
    ViewBag.Title = "ShowDetail";
}

<h2>ShowDetail</h2>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            @Html.Display("ID")
        </th>
    </tr>
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.Display("Name")
        </th>
    </tr>
    <tr>
        <th>
            Address
        </th>
        <th>
            @Html.Display("Address")
        </th>
    </tr>
    <tr>
        <th>
            City
        </th>
        <th>
            @Html.Display("City")
        </th>
    </tr>
    <tr>
        <th>
            State
        </th>
        <th>
            @Html.Display("State".ToString())
        </th>
    </tr>
    <tr>
        <th>
            Zip
        </th>
        <th>
            @Html.Display("Zip")
        </th>
    </tr>
    <tr>
        <th>
            Status
        </th>
        <th>
            @Html.Raw((Model.Open)?"Open":"Closed")
        </th>
    </tr>
</table>

