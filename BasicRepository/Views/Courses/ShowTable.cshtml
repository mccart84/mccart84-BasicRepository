@model List<BasicRepository.Models.Course>

@{
    ViewBag.Title = "ShowTable";
}

<h2>Disc Golf Courses</h2>

<br />

<a href="/Courses/CreateCourse">Add a New Course</a>

<table class="table">
    <tr>
        <th>Last Modified</th>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Status</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.Label(@item.TimeStamp.ToString("MM - dd - yyyy"))</td>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.City</td>
            <td>@item.State</td>
            <td>@item.Zip</td>
            <td>@(item.Open ? "Open" : "Closed")</td>
            <td>
                <a href="/Courses/ShowDetail?id=@item.ID">View</a>&nbsp;&nbsp;
                <a href="/Courses/UpdateCourse?id=@item.ID">Edit</a>&nbsp;&nbsp;
                <a href="/Courses/DeleteCourse?id=@item.ID">Delete</a>&nbsp;&nbsp;
            </td>
        </tr>
    }
</table>